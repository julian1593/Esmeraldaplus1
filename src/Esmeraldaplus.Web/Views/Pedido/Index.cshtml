@model IEnumerable<Esmeraldaplus.Core.Domain.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/RegisterLogin1.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVendedorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEntrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVendedorNavigation.IdVendedor)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPedido">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdPedido">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPedido">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
